{
  "name": "goal-tracker",
  "version": "1.0.0",
  "private": true,
  "description": "Demo app used in Delicious Insightsâ€™ JS Total training course",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack",
    "deploy": "surge --project public",
    "doc": "rimraf doc && groc",
    "fake-server": "node playground/server.js",
    "lint": "standard --verbose | snazzy",
    "postinstall": "rimraf .jshintrc .jshintignore && npm run doc",
    "start": "hjs-dev-server",
    "test": "mocha",
    "test:cov": "nyc --reporter=lcov npm test && rimraf .nyc_output",
    "test:watch": "npm test -- --watch",
    "validate": "npm ls"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-2"
    ],
    "plugins": [
      "transform-class-properties",
      "transform-decorators-legacy"
    ],
    "env": {
      "development": {
        "presets": [
          "react-hmre"
        ]
      }
    }
  },
  "standard": {
    "globals": [
      "describe",
      "it"
    ],
    "parser": "babel-eslint"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "keywords": [
    "node",
    "nodejs",
    "training",
    "goals",
    "tracker",
    "demo"
  ],
  "author": "Christophe Porteneuve <christophe@delicious-insights.com>",
  "license": "No-License (see LICENSE file)",
  "dependencies": {
    "autobind-decorator": "^1.3.3",
    "body-parser": "^1.15.2",
    "history": "^3.0.0",
    "isomorphic-fetch": "^2.2.1",
    "lodash.findindex": "^4.4.0",
    "lodash.reject": "^4.4.0",
    "material-ui": "^0.15.0",
    "moment": "^2.11.2",
    "pouchdb": "^5.4.4",
    "react": "^15.1.0",
    "react-addons-test-utils": "^15.1.0",
    "react-document-title": "^2.0.2",
    "react-dom": "^15.1.0",
    "react-redux": "^4.4.0",
    "react-router": "^2.4.1",
    "react-tap-event-plugin": "^1.0.0",
    "redux": "^3.5.2",
    "redux-pouchdb": "0.0.8",
    "redux-thunk": "^2.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-core": "^6.9.1",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.2",
    "babel-plugin-transform-class-properties": "^6.10.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.1.0",
    "babel-preset-stage-2": "^6.5.0",
    "body-parser": "^1.15.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "chai-enzyme": "^0.5.0",
    "colors": "^1.1.2",
    "copy-webpack-plugin": "^3.0.1",
    "cross-env": "^1.0.8",
    "css-loader": "^0.23.1",
    "enzyme": "^2.3.0",
    "express": "^4.14.0",
    "file-loader": "^0.8.5",
    "groc": "^0.8.0",
    "hjs-webpack": "^8.3.0",
    "istanbul": "^0.4.3",
    "mocha": "^2.5.3",
    "morgan": "^1.7.0",
    "node-sass": "^3.8.0",
    "nyc": "^6.6.1",
    "offline-plugin": "^3.4.0",
    "postcss-loader": "^0.9.1",
    "precommit-hook": "^3.0.0",
    "react-addons-test-utils": "^15.0.2",
    "rimraf": "^2.5.2",
    "sass-loader": "^3.2.1",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0",
    "snazzy": "^4.0.0",
    "standard": "^7.1.2",
    "style-loader": "^0.13.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.0.0",
    "surge": "^0.18.0",
    "url-loader": "^0.5.7"
  }
}
